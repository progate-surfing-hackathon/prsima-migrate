generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model activity {
  id          String   @id @default(uuid())
  author      String
  temp        Int
  steps       Int
  paid_monney Int
  created_at  DateTime
  @@index([author, created_at]) // 複合インデックスに変更
}

model users {
  id      String @id
  border  Int    @default(300)
  notification_token    String
}